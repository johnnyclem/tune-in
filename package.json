{
  "name": "musicjuke",
  "version": "0.1.0",
  "description": "MusicJuke V1 demo",
  "main": "dist/main/main.js",
  "author": "",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"vite --config src/renderer/vite.config.ts\" \"npm:electron\"",
    "electron": "VITE_DEV_SERVER_URL=http://localhost:5173 wait-on http://localhost:5173 && electron -r ts-node/register src/main/main.ts",
    "build": "npm run build:renderer && npm run build:main",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build --config src/renderer/vite.config.ts",
    "test": "jest",
    "package": "npm run build && electron-builder"
  },
  "dependencies": {
    "better-sqlite3": "^9.4.0",
    "chokidar": "^3.6.0",
    "electron": "^35.7.5",
    "fluent-ffmpeg": "^2.1.3",
    "fs-extra": "^11.2.0",
    "howler": "^2.2.4",
    "music-metadata": "^8.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-window": "^1.8.10"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/react-window": "^1.8.8",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron-builder": "^24.9.1",
    "jest": "^29.7.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vite": "^7.3.1",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.musicjuke.demo",
    "productName": "MusicJuke",
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    }
  }
}
